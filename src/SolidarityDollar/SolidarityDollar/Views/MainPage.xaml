            <pancake:PancakeView>
                <Grid>
                    <StackLayout>
                        <Label Text="{Binding ValueRateDolarOficial}" />
                        <Label Text="{Binding ValueRateDolarSolidario}" />
                        <Label Text="{Binding ValueRateDolarBlue}" />
                    </StackLayout>
                </Grid>
            </pancake:PancakeView>

              Values Calculate
            <pancake:PancakeView>
                <StackLayout>
                    <Label Text="{Binding ResultOficial}" />
                    <Label Text="{Binding ResultSolidario}" />
                    <Label Text="{Binding ResultBlue}" />

                </StackLayout>
            </pancake:PancakeView>-->


        </StackLayout>


    </ScrollView>


</ContentPage>
